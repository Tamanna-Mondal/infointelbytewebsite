<% layout('layouts/boilerplate') %>

<body>

<!-- Hero Section -->
<section class="hero-section py-5 bg-light">
  <div class="container text-center">
    <h1 class="display-5 fw-bold">Welcome to Our Tech Hub</h1>
    <p class="lead">We deliver modern solutions using cutting-edge technologies.</p>
  </div>
</section>

<!-- Tech Stack Section -->
<section class="tech-stack-section py-5">
  <div class="container">
    <h2 class="section-title text-center mb-4" style="color: rgb(223,10,10);">Our Technology Capabilities</h2>

    <!-- Tabs -->
    <div class="tabs-container">
      <div class="d-flex flex-wrap justify-content-center mb-4 gap-2">
        <button class="tab btn btn-outline-danger active" data-target="backend">Back End</button>
        <button class="tab btn btn-outline-danger" data-target="frontend">Front End</button>
        <button class="tab btn btn-outline-danger" data-target="mobile">Mobile</button>
        <button class="tab btn btn-outline-danger" data-target="cloud">Cloud</button>
      </div>

      <!-- Tab Contents -->
      <div class="tech-logos">
        <!-- Back End -->
        <div class="tab-content active row g-3 justify-content-center" id="backend">
          <img src="/wordpress.png" class="tech-img" alt="WordPress">
          <img src="/yii.png" class="tech-img" alt="Yii">
          <img src="/codeigniter-logo.png" class="tech-img" alt="CodeIgniter">
          <img src="/laravel.jpg" class="tech-img" alt="Laravel">
          <img src="/node.js.png" class="tech-img" alt="Node.js">
          <img src="/express.js.jpg" class="tech-img" alt="Express.js">
          <img src="/next.js.jpg" class="tech-img" alt="Next.js">
          <img src="/php.png" class="tech-img" alt="PHP">
        </div>

        <!-- Front End -->
        <div class="tab-content row g-3 justify-content-center" id="frontend">
          <img src="/html.png" class="tech-img" alt="HTML5">
          <img src="/css.png" class="tech-img" alt="CSS3">
          <img src="/js.png" class="tech-img" alt="JavaScript">
          <img src="/react.png" class="tech-img" alt="React">
          <img src="/vusjs.png" class="tech-img" alt="Vue.js">
          <img src="/mysql.png" class="tech-img" alt="MySQL">
          <img src="/mongodb.png" class="tech-img" alt="MongoDB">
        </div>

        <!-- Mobile -->
        <div class="tab-content row g-3 justify-content-center" id="mobile">
          <img src="/flutter.png" class="tech-img" alt="Flutter">
          <img src="/react native.png" class="tech-img" alt="React Native">
          <img src="/ionic.jpg" class="tech-img" alt="Ionic">
        </div>

        <!-- Cloud -->
        <div class="tab-content row g-3 justify-content-center" id="cloud">
          <img src="/aws.png" class="tech-img" alt="AWS">
          <img src="/firebase.png" class="tech-img" alt="Firebase">
          <img src="/azure.jpg" class="tech-img" alt="Azure">
          <img src="/hostinger.png" class="tech-img" alt="Hostinger">
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Services Section -->
<div class="container my-5">
  <h2 class="section-title text-center mb-4" style="color: rgb(223,10,10);">Services We Offer</h2>

  <div class="row g-4 justify-content-center">

    <!-- Card 1 -->
    <div class="col-md-6 col-lg-3">
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front text-black text-center p-4">
            <div class="service-icon mb-2"><i class="fas fa-globe"></i></div>
            <h5 class="fw-bold">Static Website</h5>
          </div>
          <div class="flip-card-back text-white p-4">
            <p>Build blazing-fast static websites ideal for portfolios, blogs, or small businesses.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Card 2 -->
    <div class="col-md-6 col-lg-3">
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front text-black text-center p-4">
            <div class="service-icon mb-2"><i class="fas fa-code"></i></div>
            <h5 class="fw-bold">Custom Website</h5>
          </div>
          <div class="flip-card-back text-white p-4">
            <p>Tailored web applications with modern UX/UI and backend capabilities to suit your business model.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Card 3 -->
    <div class="col-md-6 col-lg-3">
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front text-black text-center p-4">
            <div class="service-icon mb-2"><i class="fas fa-cogs"></i></div>
            <h5 class="fw-bold">CMS</h5>
          </div>
          <div class="flip-card-back text-white p-4">
            <p>We provide CMS-based sites using WordPress, Joomla and more for easy content management.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Card 4 -->
    <div class="col-md-6 col-lg-3">
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front text-black text-center p-4">
            <div class="service-icon mb-2"><i class="fas fa-shopping-cart"></i></div>
            <h5 class="fw-bold">E-commerce</h5>
          </div>
          <div class="flip-card-back text-white p-4">
            <p>Launch your online store using Shopify, WooCommerce, or custom solutions tailored to your brand.</p>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</body>